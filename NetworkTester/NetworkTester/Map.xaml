<Window x:Class="NetworkTester.Map"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
        xmlns:local="clr-namespace:NetworkTester"
        mc:Ignorable="d"
        Title="Map" Height="500" Width="600">
    <Grid>
        <m:Map x:Name="mp_map" Mode="AerialWithLabels" />
        <Label Content="IP location data from https://db-ip.com/" FontSize="9" Foreground="White" HorizontalAlignment="Left" Width="170" Height="22" VerticalAlignment="Bottom" />
    </Grid>
</Window>
